        <intercept-url pattern="/addCourse" method="GET" access="ROLE_ADMIN" />
        <intercept-url pattern="/addCustomer" method="GET" access="ROLE_ADMIN" />
        
        <!--default-target-url="/login"-->
        
        <form-login  login-page="/login.jsp" />
